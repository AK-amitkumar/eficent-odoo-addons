<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="edit_project" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr='//div[@name="buttons"]' position='inside'>
                    <button string="BOM Lines"
                        name="%(analytic_bom.act_account_analytic_2_analytic_bom)d"
                        type="action"
                        context="{'default_analytic_account_id': analytic_account_id,'search_default_analytic_account_ids': [analytic_account_id]}"
                        groups="project.group_project_manager"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="BOM Lines" name="analytic_bom">
                        <group>
                            <label for="analytic_bom_ids"/>
                            <field name="analytic_bom_ids" nolabel="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

		<menuitem id="analytic_bom_menu" name="Project Bill of Materials"
          parent="project.menu_project_management"
          groups="project.group_project_manager,project.group_project_user"/>

        <menuitem groups="project.group_project_manager,project.group_project_user"
            action="analytic_bom.action_analytic_bom_open_form"
            id="project_bom_menuitem"
            parent="project_bom.analytic_bom_menu"
            sequence="1"/>

    </data>
</openerp>
