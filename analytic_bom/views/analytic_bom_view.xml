<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <record id="view_analytic_bom_form" model="ir.ui.view">
            <field name="name">analytic.bom.form</field>
            <field name="model">analytic.bom</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
				<form string="Analytic bom" version="7.0">
                    <header>
                        <button name="action_button_confirm" states="draft" string="Confirm" type="object" class="oe_highlight"/>
                        <button name="action_button_draft" states="confirm,cancel" string="Reset to Draft" type="object"/>
                        <button name="action_button_cancel" states="draft,confirm" string="Cancel" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <group colspan="3" col="4">
                            <field name="account_id"/>
                            <field name="name"/>
                            <field name="date_planned"/>
                        </group>
                        <group colspan="2" col="4"
                               string="BOM Product Information">
                            <field name="product_id" on_change="on_change_product_id(product_id)"/>
                            <field name="bom_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom_id"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_analytic_bom_tree" model="ir.ui.view">
            <field name="name">analytic.bom.tree</field>
            <field name="model">analytic.bom</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
				<tree string="Analytic bom" editable="top">
                    <field name="account_id"/>
                    <field name="date_planned"/>
                    <field name="name" invisible="True"/>
	                <field name="product_id" on_change="on_change_product_id(product_id)"/>
					<field name="bom_id"/>
                    <field name="product_qty"/>
                    <field name="product_uom_id"/>
                    <button name="action_button_confirm" icon="gtk-apply" states="draft" string="Confirm" type="object" class="oe_highlight"/>
                    <button name="action_button_draft" icon="gtk-convert" states="confirm,cancel" string="Reset to Draft" type="object"/>
                    <button name="action_button_cancel" icon="gtk-cancel" states="draft,confirm" string="Cancel" type="object"/>
                    <field name="state"/>
	            </tree>
            </field>
        </record>
        <record id="view_analytic_bom_filter" model="ir.ui.view">
            <field name="name">analytic.bom.select</field>
            <field name="model">analytic.bom</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Boms">
                    <group col='6' colspan='5'>
                        <field name="account_id"/>
                        <field name="product_id"/>
                        <field name="bom_id"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_analytic_bom_open_form" model="ir.actions.act_window">
            <field name="name">Analytic Boms</field>
            <field name="res_model">analytic.bom</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_analytic_bom_filter" />
        </record>
        
		<record model="ir.actions.act_window.view" id="action_analytic_bom_tree">
	        <field name="sequence" eval="1"/>
	        <field name="view_mode">tree</field>
	        <field name="view_id" ref="view_analytic_bom_tree"/>
	        <field name="act_window_id" ref="action_analytic_bom_open_form"/>
	   	</record>
	   	
	   	<record model="ir.actions.act_window.view" id="action_analytic_bom_form2">
	        <field name="sequence" eval="2"/>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="view_analytic_bom_form"/>
	        <field name="act_window_id" ref="action_analytic_bom_open_form"/>
	   	</record>

		<menuitem id="analytic_bom_menu" name="Analytic Boms"
          parent="account.menu_analytic_accounting"
          groups="analytic.group_analytic_accounting"/>

        <menuitem groups="analytic.group_analytic_accounting"
            action="action_analytic_bom_open_form"
            id="analytic_bom_entries"
            parent="analytic_bom_menu"
            sequence="1"/>

	</data>

</openerp>
