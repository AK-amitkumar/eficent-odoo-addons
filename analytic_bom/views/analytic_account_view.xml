<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <act_window
            id="act_account_analytic_2_analytic_bom"
            name="BOM Lines"
            context = "{'search_default_account_id': [active_id], 'default_account_id' :active_id}"
            res_model="analytic.bom"
            src_model="account.analytic.account"
            groups="analytic.group_analytic_accounting"/>

		<record model="ir.actions.act_window.view"
                id="act_account_analytic_2_analytic_bom_tree">
	        <field name="sequence" eval="1"/>
	        <field name="view_mode">tree</field>
	        <field name="view_id" ref="view_analytic_bom_tree"/>
	        <field name="act_window_id"
                   ref="act_account_analytic_2_analytic_bom"/>
	   	</record>
	   	            
        <!-- Analytic account -->
        <record id="view_account_analytic_account_form" model="ir.ui.view">
            <field name="name">account.analytic.account.form</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic_plan.view_account_analytic_account_form_analytic_plan"/>
            <field name="arch" type="xml">
                <xpath expr='//div[@name="buttons"]' position='inside'>
                    <button
                            name="%(act_account_analytic_2_analytic_bom)d"
                            string="BOM Lines" type="action"/>
                </xpath>
            </field>
       </record>
       
	</data>
</openerp>
