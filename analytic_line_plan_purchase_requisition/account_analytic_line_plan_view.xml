<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <act_window name="Create Purchase Requisition"
		    res_model="analytic.line.plan.make.purchase.requisition"
		    view_mode="form"
		    view_type="form"
		    target="new"        
            key2="client_action_multi"    
		    id="action_analytic_line_plan_make_purchase_requisition"
		    view_id="analytic_line_plan_purchase_requisition.view_analytic_line_plan_make_purchase_requisition"
		    groups="purchase.group_purchase_user"/>

       <record id="view_account_analytic_line_plan_purchase_requisition_form" model="ir.ui.view">
            <field name="name">account.analytic.line.plan.purchase.requisition.form</field>
            <field name="model">account.analytic.line.plan</field>
            <field name="inherit_id" ref="analytic_plan.view_account_analytic_line_plan_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr='//page[@name="notes"]' position='after'>
                    <page string="Purchase requisitions" name="requisitions">
                        <field name="requisition_line_ids"/>
                    </page>
                </xpath>
            </field>
       </record>
	</data>
</openerp>
