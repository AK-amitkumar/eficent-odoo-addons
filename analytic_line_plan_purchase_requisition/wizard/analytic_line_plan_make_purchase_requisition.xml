<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_analytic_line_plan_make_purchase_requisition" model="ir.ui.view">
            <field name="name">Project purchase plan make purchase requisition</field>
            <field name="model">analytic.line.plan.make.purchase.requisition</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                 <form string="Create purchase requisition">
                     <separator string="Review the existing requisition lines:"/>
                     <newline/>
                     <group colspan="4">
                        <field name="requisition_line_ids" nolabel="1" readonly="True"/>
                     </group>
                     <group colspan="2">
                         <separator string="Select the requisition type:"/>
                         <newline/>
                         <field name = "requisition_type" nolabel="1"/>
                     </group>
                     <newline/>
                     <group colspan="2">
                         <button name="make_purchase_requisitions" string="Create Purchase Requisition" type="object" class="oe_highlight"/>
                         <button special="cancel" string="Cancel" class="oe_link"/>
                     </group>
                </form>
            </field>
        </record>

        <record id="action_view_analytic_line_plan_make_purchase_requisition" model="ir.actions.act_window">
            <field name="name">Create purchase requisition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">analytic.line.plan.make.purchase.requisition</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_analytic_line_plan_make_purchase_requisition"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="analytic_line_plan_make_purchase_requisition">
            <field name="model_id" ref="analytic_plan.model_account_analytic_line_plan" />
            <field name="object" eval="1" />
            <field name="name">Create Purchase Requisition</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_view_analytic_line_plan_make_purchase_requisition'))" />
            <field name="key">action</field>
            <field name="model">account.analytic.line.plan</field>
        </record>
   
    </data>
</openerp>

