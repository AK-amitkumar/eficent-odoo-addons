<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_warehouse" model="ir.ui.view">
            <field name="name">stock.warehouse</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']"
                       position="after">
                    <field name="wh_analytic_reserve_location_id"
                           groups="stock.group_locations"/>
                </xpath>
            </field>
        </record>

        <record id="view_inventory_form" model="ir.ui.view">
            <field name="name">stock.inventory.form</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="on_change"></attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='product_uom_id']" position="attributes">
                    <attribute name="on_change"></attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='location_id']" position="attributes">
                    <attribute name="on_change"></attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='prod_lot_id']" position="attributes">
                    <attribute name="on_change"></attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='package_id']" position="attributes">
                    <attribute name="on_change"></attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='partner_id']" position="attributes">
                    <attribute name="on_change"></attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='partner_id']" position="attributes">
                    <attribute name="on_change"></attribute>
                </xpath>
                <xpath expr="//group/group/field[@name='lot_id']" position="after">
                    <field name="analytic_account_id" attrs="{'invisible': [('filter', '!=', 'analytic')], 'required': [('filter', '=', 'analytic')]}" groups="analytic.group_analytic_accounting" />
                </xpath>
            </field>
        </record>


    </data>
</openerp>
