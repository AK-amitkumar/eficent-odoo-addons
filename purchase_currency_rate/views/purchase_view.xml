<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='view_invoice']" position="after">
                    <button name="%(action_purchase_force_currency_rate)d"
                            type="action"
                        string="Force currency rate"
                        attrs="{'invisible': [('show_force_currency', '=', False), ('state', 'not in', ['draft', 'sent', 'bid'])]}"/>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="currency_rate"
                           attrs="{'invisible':[('currency_rate', '=', 0.0)]}"
                           groups="base.group_multi_currency"/>
                    <field name="show_force_currency" invisible="1"/>
                </xpath>
            </field>
        </record>

</data>
</openerp>
