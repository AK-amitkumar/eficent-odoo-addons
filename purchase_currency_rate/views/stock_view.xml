<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="%(action_picking_force_currency_rate)d"
                            type="action"
                        string="Force currency rate"
                        attrs="{'invisible': [('show_force_currency', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="currency_id" readonly="True"/>
                    <field name="currency_rate"
                           attrs="{'invisible':[('currency_rate', '=', 0.0)]}"
                           groups="base.group_multi_currency"/>
                    <field name="show_force_currency" invisible="1"/>
                </xpath>
            </field>
        </record>

</data>
</openerp>
