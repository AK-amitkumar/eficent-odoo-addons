<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

#---------------------------------------------------------------------------------------------------------
#  Extend the menus of the project
#---------------------------------------------------------------------------------------------------------

         <record id="open_view_project_projects" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">kanban,tree,form,gantt</field>
            <field name="view_id" ref="project.view_project_kanban"/>
            <field name="search_view_id" ref="view_project_project_filter"/>
            <field name="context">{'search_default_Current': 1, 'search_default_account_class':'project', 'default_account_class':'project'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                  Click to start a new project.
                </p>
            </field>
        </record>

        <record id="open_view_project_phases" model="ir.actions.act_window">
            <field name="name">Phases</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">kanban,tree,form,gantt</field>
            <field name="view_id" ref="project.view_project_kanban"/>
            <field name="search_view_id" ref="view_project_project_filter"/>
            <field name="context">{'search_default_Current': 1, 'search_default_account_class':'phase', 'default_account_class':'phase'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                  Click to start a new phase.
                </p>
            </field>
        </record>

        <record id="open_view_project_deliverables" model="ir.actions.act_window">
            <field name="name">Deliverables</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">kanban,tree,form,gantt</field>
            <field name="view_id" ref="project.view_project_kanban"/>
            <field name="search_view_id" ref="view_project_project_filter"/>
            <field name="context">{'search_default_Current': 1, 'search_default_account_class':'deliverable', 'default_account_class':'deliverable'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                  Click to start a new deliverable.
                </p>
            </field>
        </record>

        <record id="open_view_project_work_packages" model="ir.actions.act_window">
            <field name="name">Work Packages</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">kanban,tree,form,gantt</field>
            <field name="view_id" ref="project.view_project_kanban"/>
            <field name="search_view_id" ref="view_project_project_filter"/>
            <field name="context">{'search_default_Current': 1, 'search_default_account_class':'work_package', 'default_account_class':'work_package'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                  Click to start a new work package.
                </p>
            </field>
        </record>

        <menuitem action="project.open_view_project_all" id="project.menu_projects" name="All WBS" parent="project.menu_project_management" sequence="1"/>
        <menuitem action="open_view_project_projects" id="menu_project_projects" name="Projects" parent="project.menu_project_management" sequence="2"/>
        <menuitem action="open_view_project_phases" id="menu_project_phases" name="Phases" parent="project.menu_project_management" sequence="3"/>
        <menuitem action="open_view_project_deliverables" id="menu_project_deliverables" name="Deliverables" parent="project.menu_project_management" sequence="4"/>
        <menuitem action="open_view_project_work_packages" id="menu_project_work_packages" name="Work Packages" parent="project.menu_project_management" sequence="5"/>


#---------------------------------------------------------------------------------------------------------
#   Extend the project
#---------------------------------------------------------------------------------------------------------

       <record id="view_project_project_filter" model="ir.ui.view">
            <field name="name">project.project.select</field>
            <field name="model">project.project</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
            	<field name="name" position="after">
            			<field name="complete_wbs_name" string="WBS name"/>
            			<field name="complete_wbs_code" string="WBS code"/>
						<field name="account_class" string="Class"/>
						<field name="lifecycle_stage" string="Stage" attrs="{'readonly':[('class','in',['deliverable', 'work_package'])]}"/>
                        <field name="parent_id"/>
            	</field>
            </field>
        </record>


        <record id="view_project" model="ir.ui.view">
            <field name="name">project.project.tree</field>
            <field name="model">project.project</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
            		<field name="complete_wbs_name" string="WBS name"/>					
            		<field name="complete_wbs_code" string="WBS code"/>
            		<field name="account_class" string="Class"/>
            	</field>
            </field>
        </record>



        <record id="edit_project" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
            	<group position="after">
					<group string="Project configuration">
						<group>
							<field name="account_class" string="Class"/>
							<field name="lifecycle_stage" string="Life Cycle"/>
						</group>
						<group>
							<field name="code" string="Code"/>
							<field name="complete_wbs_code" string="WBS code" readonly="1" />
						</group>
					</group>
            	</group>
                <notebook position="inside">
                    <page string="WBS">
                        <field name="project_child_complete_ids"/>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="act_project_project_2_deliverable_all" model="ir.actions.act_window">
            <field name="name">Deliverables</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">kanban,tree,form,calendar,gantt,graph</field>
            <field name="search_view_id" ref="view_project_project_filter"/>
        </record>


        <record model="ir.ui.view" id="view_project_kanban_wbs">
            <field name="name">project.project.kanban.wbs</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">
		        <kanban position="replace">
		        	<kanban default_group_by="lifecycle_stage">
	            	<field name="complete_wbs_code"/>
	            	<field name="complete_wbs_name"/>
                    <field name="effective_hours"/>
                    <field name="planned_hours"/>
                    <field name="name"/>
                    <field name="members"/>
                    <field name="use_tasks"/>
                    <field name="user_id"/>
                    <field name="date"/>
                    <field name="color"/>
                    <field name="task_count"/>
                    <field name="child_project_count"/>
                    <field name="child_phase_count"/>
                    <field name="child_deliverable_count"/>
                    <field name="child_work_package_count"/>
                    <field name="child_unclassified_count"/>
                    <field name="alias_id"/>
                    <field name="alias_domain"/>
                    <field name="doc_count"/>
                    <templates>
                        <t t-name="kanban-box">
							<div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                                <div class="oe_dropdown_toggle oe_dropdown_kanban" groups="base.group_user">
                                    <span class="oe_e">Ã­</span>
                                    <ul class="oe_dropdown_menu">
                                        <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Project Settings</a></li></t>
                                        <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                                        <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_content">

                                    <h4><field name="complete_wbs_name"/></h4>
                                    <field name="complete_wbs_code"/>
                                    <div class="oe_kanban_project_list">
                                        <a name="action_openProjectsView" type="object" style="margin-right: 10px" context="{'search_default_account_class': 'project','search_default_account_class': 'project'}">
                                            <span t-if="record.child_project_count.raw_value gt 0"><field name="child_project_count"/> Project(s)</span>
                                        </a>
                                        <a name="action_openPhasesView" type="object" style="margin-right: 10px" context="{'search_default_account_class': 'phase','search_default_account_class': 'phase'}">
                                            <span t-if="record.child_phase_count.raw_value gt 0"><field name="child_phase_count"/> Phase(s)</span>
                                        </a>
                                        <a name="action_openDeliverablesView" type="object" style="margin-right: 10px" context="{'search_default_account_class': 'deliverable','search_default_account_class': 'deliverable'}">
                                            <span t-if="record.child_deliverable_count.raw_value gt 0"><field name="child_deliverable_count"/> Deliverable(s)</span>
                                        </a>
                                        <a name="action_openWorkPackagesView" type="object" style="margin-right: 10px" context="{'search_default_account_class': 'work_package','search_default_account_class': 'work_package'}">
                                            <span t-if="record.child_work_package_count.raw_value gt 0"><field name="child_work_package_count"/> Work Package(s)</span>
                                        </a>
                                        <a name="action_openUnclassifiedView" type="object" style="margin-right: 10px" context="{'search_default_account_class': 'work_package','search_default_account_class': 'work_package'}">
                                            <span t-if="record.child_unclassified_count.raw_value gt 0"><field name="child_unclassified_count"/> Unclassified project(s)</span>
                                        </a>
                                        <a t-if="record.use_tasks.raw_value" name="%(project.act_project_project_2_project_task_all)d" type="action" style="margin-right: 10px">
                                            <span t-if="record.task_count.raw_value gt 1"><field name="task_count"/> Tasks</span>
                                            <span t-if="record.task_count.raw_value lt 2"><field name="task_count"/> Task</span>
                                        </a>
                                    </div>
                                    <div class="oe_kanban_project_list">
                                        <a t-if="record.doc_count.raw_value" name="attachment_tree_view" type="object" style="margin-right: 10px"> <field name="doc_count"/> Documents</a>
                                    </div>
                                    <div class="oe_kanban_footer_left">
                                        <span groups="project.group_time_work_estimation_tasks">
                                            <span class="oe_e">R</span>
                                            <t t-esc="Math.round(record.effective_hours.raw_value)"/>/<t t-esc="Math.round(record.planned_hours.raw_value)"/> <field name="company_uom_id"/>
                                        </span>
                                        <span t-if="record.date.raw_value">
                                            <span class="oe_e">N</span>
                                            <field name="date"/>
                                        </span>
                                    </div>                                    
                                    <div class="oe_kanban_project_avatars">
                                        <t t-foreach="record.members.raw_value.slice(0,11)" t-as="member">
                                            <img t-att-src="kanban_image('res.users', 'image_small', member)" t-att-data-member_id="member"/>
                                        </t>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>	            	
	            	</kanban>            	
				</kanban>
			</field>
		</record>



#---------------------------------------------------------------------------------------------------------
#   Extend the analytic account
#---------------------------------------------------------------------------------------------------------
        <record id="view_account_analytic_account_list" model="ir.ui.view">
            <field name="name">account.analytic.account.list</field>
            <field name="model">account.analytic.account</field>
            <field name="type">tree</field>
            <field eval="8" name="priority"/>
            <field name="inherit_id" ref="account.view_account_analytic_account_list"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
            		<field name="account_class" string="Class" attrs="{'invisible':[('type','not in',['contract','template'])]}"/>
            		<field name="lifecycle_stage" string="Life Cycle"/>
            	</field>
            </field>
        </record>

        <record id="view_account_analytic_account_search" model="ir.ui.view">
            <field name="name">account.analytic.account.search</field>
            <field name="model">account.analytic.account</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="account.view_account_analytic_account_search"/>
            <field name="arch" type="xml">
            	<field name="name" position="after">
            		<field name="complete_wbs_name" string="WBS name"/>
            		<field name="complete_wbs_code" string="WBS code"/>
					<field name="account_class" string="Class"/>
					<field name="lifecycle_stage" string="Life Cycle"/>
            	</field>
            </field>
        </record>

		<record id="view_account_analytic_account_tree" model="ir.ui.view">
            <field name="name">account.analytic.account.tree</field>
            <field name="model">account.analytic.account</field>
            <field name="type">tree</field>
            <field name="field_parent">child_complete_ids</field>
            <field name="inherit_id" ref="account.view_account_analytic_account_tree"/>
            <field name="arch" type="xml">
            	<field name="code" position="after">
            		<field name="complete_wbs_code" string="WBS code"/>
					<field name="account_class" string="Class"/>
					<field name="lifecycle_stage" string="Life Cycle"/>
            	</field>
            </field>
        </record>

        <record id="view_account_analytic_account_form" model="ir.ui.view">
            <field name="name">account.analytic.account.form</field>
            <field name="model">account.analytic.account</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
            	<field name="code" position="after">
            		<field name="account_class" string="Class"/>
            		<field name="lifecycle_stage" string="Life Cycle"/>
            		<field name="complete_wbs_code" string="WBS code" readonly="1"/>
            	</field>
            </field>
        </record>

#---------------------------------------------------------------------------------------------------------
#  Extend the task
#---------------------------------------------------------------------------------------------------------


 		<record id="view_task_form2" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="type">form</field>
            <field eval="2" name="priority"/>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
            	<field name="project_id" position="after">
					<field name="project_complete_wbs_name" string="WBS name"/>
					<field name="project_complete_wbs_code" string="WBS code" />
				</field>
            </field>
        </record>


        <record id="view_task_search_form" model="ir.ui.view">
            <field name="name">project.task.search.form</field>
            <field name="model">project.task</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
            	<field name="project_id" position="after">
        			<field name="project_complete_wbs_code" string="WBS code"/>
        			<field name="project_complete_wbs_name" string="WBS name"/>
            	</field>
            </field>
        </record>

        <record id="view_task_tree2" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field name="type">tree</field>
            <field eval="2" name="priority"/>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
            	<field name="project_id" position="after">
        			<field name="project_complete_wbs_code" string="WBS code"/>
        			<field name="project_complete_wbs_name" string="WBS name"/>
            	</field>
            </field>
        </record>

    </data>
</openerp>
