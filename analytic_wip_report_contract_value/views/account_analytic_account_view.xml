<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_analytic_account_wip_extend_tree" model="ir.ui.view">
        <field name="name">account.analytic.account.wip.tree</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic_wip_report.view_account_analytic_account_wip_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='total_value']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_open_total_value_lines']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='total_value']" position="before">
                <field name="total_contract_value"/>
            </xpath>
        </field>
    </record>

</odoo>
